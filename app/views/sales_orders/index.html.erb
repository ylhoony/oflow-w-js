<p id="notice"><%= notice %></p>

<h3>Sales Orders</h3>

<table>
  <thead>
    <tr>
      <th>Customer Account Name</th>
      <th>Reference Number</th>
      <th>Bill From</th>
      <th>Ship From</th>
      <th>Ship To</th>
      <th>Comment</th>
      <th>Order Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_orders.each do |sales_order| %>
      <tr>
        <td><%= sales_order.customer.name %></td>
        <td><%= sales_order.reference %></td>
        <td><%= sales_order.company_address.name %></td>
        <td><%= sales_order.warehouse.name %></td>
        <td><%= sales_order.account_address.company_name %></td>
        <td><%= sales_order.comment %></td>
        <td><%= sales_order.order_status.name %></td>
        <td><%= link_to 'Edit', edit_sales_order_path(sales_order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sales Order', new_sales_order_path %>