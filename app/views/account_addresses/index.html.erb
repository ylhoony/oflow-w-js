<h3>Customer Addresses for </h3>

<table>
  <thead>
    <tr>
      <th>Business Name</th>
      <th>Attention</th>
      <th>City</th>
      <th>State/Province</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Active?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @account_addresses.each do |addr| %>
      <tr>
        <td><%= link_to addr.company_name, company_address_path(addr) %></td>
        <td><%= addr.attention %></td>
        <td><%= addr.city %></td>
        <td><%= addr.state %></td>
        <td><%= addr.email %></td>
        <td><%= addr.phone %></td>
        <td><%= check_box "company address", "active", { checked: addr.active, disabled: true } %></td>
        <td><%= link_to 'Edit', edit_customer_account_address_path(@account, addr) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

